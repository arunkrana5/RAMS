@{
    Layout = "_Layout";
}
<style>
    .select2-container .select2-selection--multiple {
        min-height: 0px;
        padding-top: 0px;
    }

    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        background-color: deepskyblue;
        border-color: black;
    }

    .select2-container--default .select2-selection--multiple .select2-selection__choice__remove:hover {
        background-color: fuchsia;
    }

    .select2-container {
        width: 100% !important;
    }

    .border-color-red {
        border-color: red;
    }
</style>
<input type="hidden" id="hd_DealerID" value="@ViewBag.ID" />
<div class="d-flex mb-10 flex-wrap gap-3 justify-content-between align-items-center">
    <h6 class="page-title" id="headerTitle">Add Dealer</h6>
    <div class="d-flex flex-wrap justify-content-end gap-2 align-items-center breadcrumb-plugins">
        <a href="@Url.Action("Dealers","Master",new {Area="SecureZone"})" class="btn btn-sm btn--primary">
            <i class="las la-list"></i>List
        </a>
        <a onclick="history.back()" class="btn btn-sm btn--primary">
            <i class="la la-undo"></i> Back
        </a>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label>Dealer Code</label>
                    <input type="text" class="form-control" id="txtDealerCode" placeholder="Enter Dealer Code" required autocomplete="off" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Dealer Name</label>
                    <input type="text" class="form-control" id="txtDealerName" placeholder="Enter Dealer Name" required autocomplete="off" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Dealer Type</label>
                    <select class="form-control applyselect" id="ddlDealerType" required>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Dealer Categpry</label>
                    <select class="form-control applyselect" id="ddlDealerCategory" required>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input type="hidden" id="hd_Region" />
                    <label>Region</label>
                    <select id="ddlRegion" class="form-control applyselect" required>
                        <option value="0">--Select--</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <input type="hidden" id="hd_StateID" />
                <div class="form-group">
                    <label>State</label>
                    <select id="ddlState" class="applyselect form-control" required>
                        <option value="0">--Select--</option>
                    </select>
                </div>
            </div>

            <div class="col-md-3">
                <input type="hidden" id="hd_CityID" />
                <div class="form-group">
                    <label>City</label>
                    <select id="ddlCity" class="applyselect form-control" required>
                        <option value="0">--Select--</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <input type="hidden" id="hd_CityID" />
                <div class="form-group">
                    <label>Area</label>
                    <select id="ddlArea" class="applyselect form-control" required>
                        <option value="0">--Select--</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>PIN Code</label>
                    <div class="input-group">
                        <input type="text" maxlength="6" id="txtPinCode" class="form-control NumericOnly" placeholder="Pin Code" autocomplete="off" required>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Email ID</label>
                    <input type="text" class="form-control" id="txtEmailID" placeholder="Enter Email ID" required autocomplete="off" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Phone</label>
                    <input type="text" class="form-control" id="txtPhone" placeholder="Enter Phone" required autocomplete="off" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Latitude</label>
                    <input type="text" class="form-control" id="txtLatitude" placeholder="Enter Latitude" required autocomplete="off" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Longitude</label>
                    <input type="text" class="form-control" id="txtLongitude" placeholder="Enter Longitude" required autocomplete="off" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Billing Code</label>
                    <input type="text" class="form-control" id="txtBillingCode" placeholder="Enter Billing Code" required autocomplete="off" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Billing Name</label>
                    <input type="text" class="form-control" id="txtBillingName" placeholder="Enter Billing Name" required autocomplete="off" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" class="form-control" id="txtAddress" placeholder="Enter Address" required autocomplete="off" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Employee</label>
                    <select class="form-control applyselect" id="ddlUserID" multiple="multiple" required>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer" id="footer">
        <button class="btn btn--success" id="btn_Submit">Submit</button>
        <a class="btn btn--danger" href="/SecureZone/Dashboard/Index">Cancel</a>
    </div>
</div>
<script src="~/assets/js/custom/adddealer.js"></script>