@{
    Layout = "_Layout";
}
<style>
    .border-color-red {
        border-color: red;
    }

    .table td {
        text-align: center;
    }

    table th:last-child {
        text-align: center;
    }

    .tabAll {
        height: 50px;
    }

    .select2-container {
        width: 100% !important;
    }
</style>
<input type="hidden" id="hd_ID" value="@ViewBag.ID" />
<div class="d-flex mb-10 flex-wrap gap-3 justify-content-between align-items-center">
    <h6 class="page-title" id="headerTitle">Add Employee</h6>
    <div class="d-flex flex-wrap justify-content-end gap-2 align-items-center breadcrumb-plugins">
        <button class="btn btn-sm btn--primary" id="expandAll">
            <i class="fa fa-expand fa-fw fa-xl margin-right-md fa-spin" style="--fa-animation-duration: 2s;"></i>
            Expand All
        </button>
        <button class="btn btn-sm btn--primary" id="collapseAll">
            <i class="fa fa-compress fa-fw fa-xl margin-right-md fa-spin" style="--fa-animation-duration: 2s;"></i>
            Collapse All
        </button>
        <a href="@Url.Action("Users","Master",new {Area="SecureZone"})" class="btn btn-sm btn--primary">
            <i class="las la-list"></i>List
        </a>
        <a onclick="history.back()" class="btn btn-sm btn--primary">
            <i class="la la-undo"></i> Back
        </a>
    </div>
</div>
<div class="card collapsed-card" style="width: 100%;">
    <div class="card-body">
        <div class="accordion" id="formAccordion">
            <div class="accordion-item">
                <div class="accordion-header">
                    <a href="javascript:" class="accordion-button tabAll" id="generalcomInformationtab" data-bs-toggle="collapse" data-bs-target="#generalInfoTab"
                       aria-expanded="true" aria-controls="generalInfoTab">
                        <div id="generalInforHeading">
                            <h2 class="mb-0">
                                <button class="btn btn-block text-left">
                                    Basic Details
                                </button>
                            </h2>
                        </div>
                    </a>
                </div>

                <div id="generalInfoTab" class="collapse show bodyAll" aria-labelledby="generalInforHeading"
                     data-bs-parent="#formAccordion">
                    <div class="accordion-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Employee Code</label>
                                    <input type="text" class="form-control" id="txtEmployeeCode" placeholder="Enter Employee Code" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Employee Name</label>
                                    <input type="text" class="form-control" id="txtEmployeeName" placeholder="Enter Employee Name" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>User Name</label>
                                    <input type="text" class="form-control" id="txtUserName" placeholder="Enter User Name" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" class="form-control" id="txtPassword" placeholder="Enter Password" value="12345" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Role</label>
                                    <select class="form-control applyselect" id="ddlRole" required>
                                        <option value="0">-- Select --</option>
                                        <option value="1">Super Admin</option>
                                        <option value="2">Admin</option>
                                        <option value="3">Manager</option>
                                        <option value="4">Employee</option>
                                        <option value="5">Intern</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Dealer</label>
                                    <select class="form-control applyselect" id="ddlDealer" required>
                                        <option value="0">-- Select --</option>
                                        <option value="1">BlueStar</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Father's Name</label>
                                    <input type="text" class="form-control" id="txtFatherName" placeholder="Enter Father's Name" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>DOB</label>
                                    <input type="date" class="form-control" id="txtDOB" placeholder="Enter DOB" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Gender</label>
                                    <select class="form-control applyselect" id="ddlGender" required>
                                        <option value="0">-- Select --</option>
                                        <option value="1">Male</option>
                                        <option value="2">Female</option>
                                        <option value="3">Others</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Designation</label>
                                    <select class="form-control applyselect" id="ddlDesignation" required>
                                        <option value="0">-- Select --</option>
                                        <option value="1">Software Engineer</option>
                                        <option value="2">Frontend Developer</option>
                                        <option value="3">Backend Developer</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Department</label>
                                    <select class="form-control applyselect" id="ddlDepartment" required>
                                        <option value="0">-- Select --</option>
                                        <option value="1">IT</option>
                                        <option value="2">Accounts</option>
                                        <option value="3">HR</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Date Of Joining</label>
                                    <input type="date" class="form-control" id="txtDOJ" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>PAN</label>
                                    <input type="text" class="form-control" id="txtPAN" placeholder="Enter PAN" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Email ID</label>
                                    <input type="text" class="form-control" id="txtEmailID" placeholder="Enter Email ID" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Phone</label>
                                    <input type="text" class="form-control" id="txtPhone" placeholder="Enter Phone" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>UAN</label>
                                    <input type="text" class="form-control" id="txtUAN" placeholder="Enter UAN" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>ESIC No</label>
                                    <input type="text" class="form-control" id="txtESICNo" placeholder="Enter ESIC No" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-md-3" style="margin-top:24px;">
                                <input class="form-check-input" type="checkbox" value="" id="chkIsPJPAutoAssign" required>
                                <label class="form-check-label" for="invalidCheck">
                                    PJP Auto Assign
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <div class="accordion-header">
                    <a href="javascript:void(0)" class="accordion-button tabAll" id="addressTab" data-bs-toggle="collapse" data-bs-target="#AddressTab"
                       aria-expanded="true" aria-controls="AddressTab">
                        <div id="addressTabHeading">
                            <h2 class="mb-0">
                                <button class="btn btn-block text-left">
                                    Address Details
                                </button>
                            </h2>
                        </div>
                    </a>
                </div>

                <div id="AddressTab" class="collapse bodyAll" aria-labelledby="addressTabHeading"
                     data-bs-parent="#formAccordion">
                    <div class="accordion-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <input type="hidden" id="hd_Country" />
                                    <label id="lblCountry">Country</label>
                                    <select id="ddlCountry" class="form-control applyselect" required>
                                        <option value="0">--Select--</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <input type="hidden" id="hd_Region" />
                                    <label>Region</label>
                                    <select id="ddlRegion" class="form-control applyselect" required>
                                        <option value="0">--Select--</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <input type="hidden" id="hd_StateID" />
                                <div class="form-group">
                                    <label>State</label>
                                    <select id="ddlState" class="applyselect form-control" required>
                                        <option value="0">--Select--</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <input type="hidden" id="hd_CityID" />
                                <div class="form-group">
                                    <label>City</label>
                                    <select id="ddlCity" class="applyselect form-control" required>
                                        <option value="0">--Select--</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Location</label>
                                    <div class="input-group">
                                        <input type="text" id="txtLocation" class="form-control" placeholder="Enter Location" autocomplete="off">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>PIN Code</label>
                                    <div class="input-group">
                                        <input type="text" maxlength="6" id="txtPinCode" class="form-control NumericOnly" placeholder="Pin Code" autocomplete="off" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Address 1</label>
                                    <div class="input-group">
                                        <textarea type="text" id="txtAddressLine1" title="Enter address" class="form-control" placeholder="Address 1" autocomplete="off"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Address 2</label>
                                    <div class="input-group">
                                        <textarea type="text" title="Enter address" id="txtAddressLine2" class="form-control" placeholder="Address 2" autocomplete="off"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <div class="accordion-header">
                    <a href="javascript:void(0)" class="accordion-button tabAll" id="bankTab" data-bs-toggle="collapse" data-bs-target="#BankTab"
                       aria-expanded="true" aria-controls="BankTab">
                        <div id="bankTabHeading">
                            <h2 class="mb-0">
                                <button class="btn btn-block text-left">
                                    Bank Details
                                </button>
                            </h2>
                        </div>
                    </a>
                </div>

                <div id="BankTab" class="collapse bodyAll" aria-labelledby="bankTabHeading"
                     data-bs-parent="#formAccordion">
                    <div class="accordion-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Branch Name</label>
                                    <div class="input-group">
                                        <input type="text" id="txtBranchName" class="form-control" placeholder="Enter Branch Name" autocomplete="off" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Bank Name</label>
                                    <div class="input-group">
                                        <input type="text" id="txtBankName" class="form-control" placeholder="Enter Bank Name" autocomplete="off" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Account Number</label>
                                    <input type="text" class="form-control" id="txtAccountNumber" placeholder="Enter Account Number" required autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>IFSC</label>
                                    <input type="text" class="form-control UpperCase IFSCFormat" id="txtIFSC" placeholder="Enter IFSC" required autocomplete="off" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @* <div class="accordion-item">
                <div class="accordion-header">
                    <a href="javascript:void(0)" class="accordion-button tabAll" id="dmsTab" data-bs-toggle="collapse" data-bs-target="#DMSTab"
                       aria-expanded="true" aria-controls="DMSTab">
                        <div id="dmsTabHeading">
                            <h2 class="mb-0">
                                <button class="btn btn-block text-left">
                                    Document Details
                                </button>
                            </h2>
                        </div>
                    </a>
                </div>

                <div id="DMSTab" class="collapse bodyAll" aria-labelledby="dmsTabHeading"
                     data-bs-parent="#formAccordion">
                    <div class="accordion-body">
                        <div class="row" id="tbl_UsersDoc">

                        </div>
                    </div>
                </div>
            </div> *@
        </div>
    </div>
    <div class="card-footer" id="footer">
        <button class="btn btn--success" id="btn_Submit">Submit</button>
        <a class="btn btn--danger" href="/SecureZone/Dashboard/Index">Cancel</a>
    </div>
</div>
